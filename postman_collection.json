                    }
                },
                {
                    "name": "Delete IP Address",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{api_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/ip-addresses/1",
                            "host": ["{{base_url}}"],
                            "path": ["api", "ip-addresses", "1"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Web Session Authentication",
            "description": "Session-based authentication for web browser access (used by Inertia.js frontend)",
            "item": [
                {
                    "name": "Get CSRF Cookie",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Extract XSRF-TOKEN from cookies",
                                    "var xsrfCookie = pm.cookies.get('XSRF-TOKEN');",
                                    "if (xsrfCookie) {",
                                    "    pm.collectionVariables.set('xsrf_token', decodeURIComponent(xsrfCookie));",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/sanctum/csrf-cookie",
                            "host": ["{{base_url}}"],
                            "path": ["sanctum", "csrf-cookie"]
                        },
                        "description": "Get CSRF token for authentication"
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "X-XSRF-TOKEN",
                                "value": "{{xsrf_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/login",
                            "host": ["{{base_url}}"],
                            "path": ["login"]
                        },
                        "description": "Login with email and password"
                    }
